<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:clipToPadding="false"
    android:clipChildren="false">


    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/placeholder_musical_note"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:layout_height="100dp"
        tools:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/cover"
        android:layout_alignBottom="@+id/cover">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/widget_content_margin_top"
            android:layout_marginStart="@dimen/widget_content_margin_start"
            android:layout_marginEnd="@dimen/widget_content_margin_end"
            android:layout_marginBottom="24dp"
            android:minHeight="@dimen/widget_min_content_height">

            <TextView android:id="@+id/title"
                android:text="An awesome song"
                android:textAppearance="@style/WidgetTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_marginTop="0.5dp"
                android:text="An awesome artist"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textAppearance="@style/WidgetSubtitle" />

        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/media_actions"
        android:orientation="horizontal"
        android:layoutDirection="ltr"
        style="@style/WidgetMediaActionContainer"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/cover"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/cover"
        android:paddingBottom="8dp"
        android:paddingRight="48dp">

        <ImageButton
            android:id="@+id/floatingWindow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12sp"
            android:background="@null"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/vd_bird_singing_24dp" />

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/vd_skip_previous"/>


        <ImageButton
            android:id="@+id/play"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleX=".9"
            android:scaleY=".9"
            android:src="@drawable/vd_play_big"/>


        <ImageButton
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleX=".8"
            android:scaleY=".8"
            android:src="@drawable/vd_skip_next"/>

    </LinearLayout>


</RelativeLayout>