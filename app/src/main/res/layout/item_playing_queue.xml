<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="isCurrentSong" type="boolean"/>
        <variable name="item" type="dev.olog.msc.presentation.model.DisplayableItem"/>
        <variable name="index" type="String"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/separator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cover"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="1dp"
                style="@style/Divider"
                android:layout_marginStart="12dp"/>

            <dev.olog.msc.presentation.widget.image.view.RoundedCornerImageView
                android:id="@+id/cover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/item_song_cover_size"
                android:layout_height="@dimen/item_song_cover_size"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/item_song_cover_margin_vertical"
                android:layout_marginBottom="@dimen/item_song_cover_margin_vertical"
                tools:src="@drawable/placeholder_folder"
                app:imageSong="@{item}"/>

            <TextView
                android:id="@+id/index"
                android:text="@{index}"
                tools:text="+1"
                tools:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="@+id/firstText"
                app:layout_constraintBottom_toBottomOf="@+id/firstText"
                app:layout_constraintStart_toEndOf="@+id/cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"/>

            <TextView
                android:id="@+id/firstText"
                app:layout_constraintTop_toTopOf="@+id/cover"
                app:layout_constraintStart_toEndOf="@+id/index"
                app:layout_constraintBottom_toTopOf="@+id/secondText"
                app:layout_constraintEnd_toStartOf="@+id/dragHandle"
                android:text="@{item.title}"
                tools:text="@tools:sample/lorem"
                style="@style/Song.MainText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:setBoldIfTrue="@{isCurrentSong}" />

            <TextView
                android:id="@+id/secondText"
                app:layout_constraintStart_toEndOf="@+id/index"
                app:layout_constraintTop_toBottomOf="@+id/firstText"
                app:layout_constraintEnd_toStartOf="@+id/remix"
                app:layout_constraintBottom_toBottomOf="@+id/cover"
                android:text="@{item.subtitle}"
                tools:text="@tools:sample/lorem"
                style="@style/Song.SecondaryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/explicit"
                app:layout_constraintTop_toTopOf="@+id/secondText"
                app:layout_constraintBottom_toBottomOf="@+id/secondText"
                app:layout_constraintEnd_toStartOf="@+id/dragHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/ExplicitView"
                android:visibility="@{item.isExplicit ? View.VISIBLE : View.GONE}"/>

            <TextView
                android:id="@+id/remix"
                app:layout_constraintTop_toTopOf="@+id/secondText"
                app:layout_constraintBottom_toBottomOf="@+id/secondText"
                app:layout_constraintEnd_toStartOf="@+id/explicit"
                style="@style/RemixView"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{item.isRemix ? View.VISIBLE : View.GONE}"/>


            <ImageButton
                android:id="@+id/dragHandle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/vd_drag_handle"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:tint="@color/button_primary_tint"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />


        </android.support.constraint.ConstraintLayout>


    </FrameLayout>

</layout>