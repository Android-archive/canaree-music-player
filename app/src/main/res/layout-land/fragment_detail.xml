<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <dev.olog.msc.presentation.widget.image.view.RoundedCornerImageView
        android:id="@+id/cover"
        tools:src="@drawable/placeholder_folder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintDimensionRatio="1"
        android:clickable="true"
        android:focusable="true"/>

    <dev.olog.msc.presentation.widget.parallax.ParallaxRecyclerView
        android:id="@+id/list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_tab_song"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="32dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />


    <dev.olog.msc.presentation.widget.fast.scroller.RxFastScroller
        android:id="@+id/fastScroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:handleColor="@color/item_selected"
        app:bubbleColor="@color/item_selected"
        app:bubbleTextColor="@android:color/white"
        app:trackColor="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/statusBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/colorPrimaryDark"/>

    <View
        android:id="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        android:background="@color/toolbar"
        android:elevation="@dimen/toolbar_elevation" />

    <TextView
        android:id="@+id/headerText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/status_bar"
        tools:text="Selena Gomez"
        android:textColor="@color/dark_grey"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="96dp"
        android:elevation="2dp"/>

    <ImageButton
        android:id="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerText"
        app:layout_constraintBottom_toBottomOf="@+id/headerText"
        android:src="@drawable/vd_back_arrow"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/button_primary_tint"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="2dp"/>

    <ImageButton
        android:id="@+id/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerText"
        app:layout_constraintBottom_toBottomOf="@+id/headerText"
        android:src="@drawable/vd_more"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:tint="@color/button_primary_tint"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation"/>

    <ImageButton
        android:id="@+id/search"
        app:layout_constraintTop_toTopOf="@+id/headerText"
        app:layout_constraintEnd_toStartOf="@+id/more"
        app:layout_constraintBottom_toBottomOf="@+id/headerText"
        android:src="@drawable/vd_search"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:tint="@color/dark_grey"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation"/>

</android.support.constraint.ConstraintLayout>