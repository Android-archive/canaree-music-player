<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/item_header_bottom_inset"
    android:paddingTop="@dimen/item_header_bottom_inset"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_marginStart="@dimen/item_album_margin"
    android:layout_marginEnd="@dimen/item_album_margin">

    <TextView
        android:id="@+id/title"
        tools:text="Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textAppearance="@style/Headline6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/item_header_bottom_inset"
        android:paddingBottom="@dimen/item_header_bottom_inset"
        android:letterSpacing="0.0005" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        style="@style/ViewAll"/>

</androidx.constraintlayout.widget.ConstraintLayout>
