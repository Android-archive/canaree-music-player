<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/item_selected</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorControlNormal">@color/dark_grey</item>
        <item name="android:colorControlActivated">@color/item_selected</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="Splash" parent="AppTheme"/>

    <style name="SettingsTheme" parent="AppTheme">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

</resources>
