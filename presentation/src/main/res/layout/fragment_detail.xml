<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/item_tab_song"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="16dp" />

    <dev.olog.presentation.widgets.fastscroller.RxFastScroller
        android:id="@+id/fastScroller"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:handleColor="@color/item_selected"
        app:bubbleColor="@color/item_selected"
        app:bubbleTextColor="@android:color/white"
        app:trackColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="16dp" />

    <View
        android:id="@+id/statusBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar"
        android:background="@color/colorPrimaryDark"
        android:alpha="0"
        tools:alpha="1"
        android:elevation="@dimen/toolbar_elevation"
        android:stateListAnimator="@animator/fade_on_activated"/>

    <View
        android:id="@+id/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        android:background="@color/toolbar"
        android:alpha="0"
        tools:alpha="1"
        android:elevation="@dimen/toolbar_elevation"
        android:stateListAnimator="@animator/fade_on_activated"/>

    <ImageButton
        android:id="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/vd_back_arrow"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:tint="@color/dark_grey"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation" />

    <ImageButton
        android:id="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/vd_search"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:tint="@color/dark_grey"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation" />

    <TextView
        android:id="@+id/header"
        tools:text="Selena Gomez"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolbar"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/search"
        android:alpha="0"
        tools:alpha="1"
        android:elevation="@dimen/toolbar_elevation"
        android:stateListAnimator="@animator/fade_on_activated" />

</android.support.constraint.ConstraintLayout>