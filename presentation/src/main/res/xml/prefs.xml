<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/prefs_category_general">

        <SwitchPreference
            android:title="@string/prefs_remember_last_tab_title"
            android:summary="@string/prefs_remember_last_tab_summary"
            android:key="@string/prefs_remember_last_tab_key"
            android:defaultValue="true" />

        <ListPreference
            android:title="@string/prefs_quick_action_title"
            android:summary="@string/prefs_quick_action_summary"
            android:entries="@array/quick_action_entries"
            android:entryValues="@array/quick_action_values"
            android:defaultValue="@string/prefs_quick_action_hide"
            android:key="@string/prefs_quick_action_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@string/popup_positive_ok"/>

        <MultiSelectListPreference
            android:title="@string/prefs_detail_visible_items_title"
            android:summary="@string/prefs_detail_visible_items_summary"
            android:key="@string/prefs_detail_visible_items_key"
            android:entries="@array/detail_visible_items"
            android:entryValues="@array/detail_visible_items_values"
            android:defaultValue="@array/detail_visible_items_values_default"/>

        <SwitchPreference
            android:title="@string/prefs_icon_color_title"
            android:key="@string/prefs_icon_color_key"
            android:defaultValue="true"
            android:summaryOff="@string/prefs_icon_color_summary_off"
            android:summaryOn="@string/prefs_icon_color_summary_on"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/prefs_category_floating_window">

        <SwitchPreference
            android:title="@string/prefs_floating_window_at_startup_title"
            android:summary="@string/prefs_floating_window_at_startup_summary"
            android:key="@string/prefs_start_floating_window_at_startup_key"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/prefs_category_audio">

        <SwitchPreference
            android:title="@string/prefs_lower_volume_on_night_title"
            android:summary="@string/prefs_lower_volume_on_night_summary"
            android:key="@string/prefs_lower_volume_key"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>