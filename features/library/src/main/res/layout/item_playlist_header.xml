<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="4dp"
    android:layout_marginBottom="@dimen/item_header_bottom_inset"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_marginStart="@dimen/item_album_margin"
    android:layout_marginEnd="@dimen/item_album_margin">

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/lastAdded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/history"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="@dimen/canaree_button_margin"
        android:text="@string/common_last_added"
        android:src="@drawable/vd_low_priority"
        style="@style/CanareeButton"
        android:drawablePadding="14dp"/>

    <dev.olog.feature.presentation.base.widget.CanareeButton
        android:id="@+id/history"
        app:layout_constraintTop_toTopOf="@+id/lastAdded"
        app:layout_constraintStart_toEndOf="@+id/lastAdded"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:text="@string/common_history"
        android:src="@drawable/vd_history"
        style="@style/CanareeButton"
        android:drawablePadding="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

