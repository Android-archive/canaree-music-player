<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_tab_song"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="16dp" />

    <dev.olog.presentation.widgets.fastscroller.RxFastScroller
        android:id="@+id/fastScroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:handleColor="@color/item_selected"
        app:bubbleColor="@color/item_selected"
        app:bubbleTextColor="@android:color/white"
        app:trackColor="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp" />

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar"
        android:background="@color/status_bar_secondary"
        android:alpha="0"
        tools:alpha="1"
        android:elevation="@dimen/toolbar_elevation" />

    <View
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:layout_marginTop="@dimen/status_bar"
        android:background="@android:color/white"

        android:alpha="0"
        tools:alpha="1"
        android:elevation="@dimen/toolbar_elevation"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_marginTop="@dimen/status_bar"
        android:src="@drawable/vd_back_arrow"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/dark_grey"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation" />

    <ImageButton
        android:id="@+id/search"
        android:layout_marginTop="@dimen/status_bar"
        android:src="@drawable/vd_search"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/dark_grey"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="@dimen/toolbar_elevation" />

    <TextView
        android:id="@+id/header"
        tools:text="Selena Gomez"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:alpha="0"
        tools:alpha="1"
        android:elevation="@dimen/toolbar_elevation" />

</FrameLayout>