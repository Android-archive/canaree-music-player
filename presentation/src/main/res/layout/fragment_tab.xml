<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="@dimen/tab_margin_vertical"
        android:paddingStart="@dimen/tab_margin_horizontal"
        android:paddingBottom="@dimen/tab_margin_vertical"
        android:paddingEnd="@dimen/tab_margin_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:listitem="@layout/item_tab_song" />

    <dev.olog.presentation.widgets.fastscroller.RxFastScroller
        android:id="@+id/fastScroller"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:handleColor="@color/item_selected"
        app:bubbleColor="@color/item_selected"
        app:bubbleTextColor="@android:color/white"
        app:trackColor="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp" />

    <dev.olog.presentation.widgets.EmptyStateView
        android:id="@+id/emptyStateImage"
        tools:empty_state_src="@drawable/vd_folder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/emptyStateText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/emptyStateText"
        app:layout_constraintTop_toBottomOf="@+id/emptyStateImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="No Folders"
        android:textColor="@color/text_color_primary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"/>


</android.support.constraint.ConstraintLayout>
