<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="item" type="dev.olog.presentation.model.DisplayableItem"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="@dimen/detail_margin_horizontal"
        android:paddingEnd="@dimen/detail_margin_horizontal"
        android:background="@color/background">

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/coverLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/Divider"
            android:layout_marginStart="12dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/coverLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="@dimen/item_song_cover_margin_vertical"
            android:layout_marginBottom="@dimen/item_song_cover_margin_vertical">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@android:color/holo_red_dark"
                app:imageAlbum="@{item}"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/firstText"
            app:layout_constraintTop_toTopOf="@+id/coverLayout"
            app:layout_constraintStart_toEndOf="@+id/coverLayout"
            app:layout_constraintBottom_toTopOf="@+id/secondText"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{item.title}"
            tools:text="@tools:sample/lorem"
            android:textColor="@color/text_color_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/secondText"
            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintStart_toEndOf="@+id/coverLayout"
            app:layout_constraintBottom_toBottomOf="@+id/coverLayout"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{item.subtitle}"
            tools:text="@tools:sample/lorem"
            android:textColor="@color/text_color_secondary"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"/>


    </android.support.constraint.ConstraintLayout>


</layout>