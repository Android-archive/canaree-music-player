<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="item" type="dev.olog.msc.presentation.model.DisplayableItem"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="200dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingStart="@dimen/detail_album_margin_horizontal"
        android:paddingEnd="@dimen/detail_album_margin_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false">

        <android.support.v7.widget.CardView
            android:id="@+id/coverLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:imageAlbum="@{item}"
                tools:src="@drawable/placeholder_folder"/>

            <!--<ImageView-->
                <!--android:id="@+id/quickAction"-->
                <!--style="@style/SmallShufflePlay"-->
                <!--android:layout_width="@dimen/smallShuffleSize"-->
                <!--android:layout_height="@dimen/smallShuffleSize"-->
                <!--android:src="@{quickAction.isPlay ? @drawable/vd_play : @drawable/vd_shuffle}"-->
                <!--android:visibility="@{quickAction.isNone ? View.GONE : View.VISIBLE}"-->
                <!--app:item="@{item}"-->
                <!--app:musicController="@{musicController}"/>-->

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/firstText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/coverLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"

            style="@style/Album.MainText"
            android:text="@{item.title}"

            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/secondText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/Album.SecondaryText"
            android:text="@{item.subtitle}"

            tools:text="@tools:sample/lorem"
            tools:visibility="visible" />

    </android.support.constraint.ConstraintLayout>

</layout>