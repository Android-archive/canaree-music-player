<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    android:background="@color/background"
    android:clipChildren="false"
    android:clipToPadding="false">

    <dev.olog.msc.presentation.widget.StatusBarView
        android:id="@+id/statusBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

    <dev.olog.msc.presentation.widget.image.view.PlayerImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:src="@android:color/holo_red_light"
        app:cornerRadius="0"
        android:clickable="false"
        android:focusable="false"
        android:transitionName="player_view"
        android:scaleType="centerCrop"/>

    <View
        android:background="#8000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ScrollView
        android:id="@+id/scrollBar"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="never">

        <TextView
            android:id="@+id/text"
            android:text="@string/offline_lyrics_empty"
            tools:text="@tools:sample/lorem/random"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"/>


    </ScrollView>

    <ImageButton
        android:id="@+id/back"
        android:src="@drawable/vd_back_arrow"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:tint="@android:color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <ImageButton
        android:id="@+id/edit"
        android:src="@drawable/vd_edit"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:tint="@android:color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <ImageButton
        android:id="@+id/search"
        android:src="@drawable/vd_search"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintEnd_toStartOf="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar"
        android:tint="@android:color/white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

</android.support.constraint.ConstraintLayout>