<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <dev.olog.msc.presentation.theme.ThemedTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="?android:attr/textColorSecondary"
        android:paddingBottom="8dp">

        <dev.olog.msc.presentation.theme.ThemedTextInputEditText
            android:id="@+id/username"
            android:hint="@string/credentials_username"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:backgroundTint="?android:attr/textColorSecondaryInverse"
            tools:text="Some text"/>

    </dev.olog.msc.presentation.theme.ThemedTextInputLayout>

    <dev.olog.msc.presentation.theme.ThemedTextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="?android:attr/textColorSecondary">

        <dev.olog.msc.presentation.theme.ThemedTextInputEditText
            android:id="@+id/password"
            android:hint="@string/credentials_password"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorSecondary"
            android:backgroundTint="?android:attr/textColorSecondaryInverse"
            tools:text="Some text"
            android:inputType="textPassword"/>

    </dev.olog.msc.presentation.theme.ThemedTextInputLayout>

</LinearLayout>