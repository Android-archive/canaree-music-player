<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar"
        android:background="@color/toolbar"
        android:stateListAnimator="@animator/categories_app_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar"
            app:layout_scrollFlags="enterAlways|scroll">

            <TextView
                android:id="@+id/header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbar"
                android:layout_marginStart="32dp"
                android:elevation="@dimen/toolbar_elevation"
                android:text="@string/header"
                android:textSize="@dimen/main_toolbar_text_size"
                android:textStyle="bold"
                android:textColor="@color/text_color_primary"
                android:paddingTop="4dp"
                android:gravity="center" />

            <ImageButton
                android:id="@+id/more"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/common_icon_size"
                android:layout_height="@dimen/toolbar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="@dimen/toolbar_elevation"
                android:tint="@color/button_primary_tint"
                android:src="@drawable/vd_more"
                android:clickable="true"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/more"
                android:layout_width="@dimen/common_icon_size"
                android:layout_height="@dimen/toolbar"
                android:elevation="@dimen/toolbar_elevation"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/button_primary_tint"
                android:src="@drawable/vd_search"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/floatingWindow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/search"
                android:layout_width="@dimen/common_icon_size"
                android:layout_height="@dimen/toolbar"
                android:elevation="@dimen/toolbar_elevation"
                android:src="@drawable/vd_bird_singing_24dp"
                android:tint="@color/button_primary_tint"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleX=".85"
                android:scaleY=".85"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab"
            app:tabSelectedTextColor="@color/tab_layout_selected"
            app:tabTextColor="@color/tab_layout_unselected"
            app:tabIndicatorColor="@color/tab_layout_selected"
            app:tabMode="scrollable"
            app:tabGravity="center"
            style="@style/CategoriesTabStyle"/>

    </android.support.design.widget.AppBarLayout>

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar"
        android:background="@color/colorPrimaryDark"
        android:elevation="@dimen/toolbar_elevation"/>

    <!--<android.support.v7.app.MediaRouteButton-->
        <!--android:id="@+id/cast"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/statusBar"-->
        <!--app:layout_constraintEnd_toStartOf="@+id/search"-->
        <!--android:layout_width="@dimen/tab"-->
        <!--android:layout_height="@dimen/toolbar"-->
        <!--android:elevation="@dimen/toolbar_elevation"-->
        <!--android:background="?attr/selectableItemBackgroundBorderless"-->
        <!--android:clickable="true"-->
        <!--android:focusable="true" />-->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <TextView
        android:id="@+id/pagerEmptyState"
        android:text="@string/pager_empty_state"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/text_color_primary"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />

</android.support.design.widget.CoordinatorLayout>