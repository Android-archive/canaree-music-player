<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="item" type="dev.olog.presentation.model.DisplayableItem"/>
        <variable name="position" type="int"/>
        <variable name="source" type="int"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1.3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:imageBigAlbum="@{item.image}"
            app:source="@{source}"
            app:position="@{position}"
            tools:src="@android:color/holo_red_dark" />

        <View
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:background="@drawable/vd_fade"/>

        <TextView
            android:id="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/more"
            android:text="@{item.title}"
            tools:text="...Like Clockwork"
            android:textSize="@dimen/item_detail_main_header_title_size"
            android:textColor="@color/text_color_primary"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:paddingTop="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>

        <TextView
            android:id="@+id/subtitle"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/more"
            android:text="@{item.subtitle}"
            tools:text="Queens Of The Stone Age"
            android:textSize="@dimen/item_detail_main_header_subtitle_size"
            android:textColor="@color/item_selected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:paddingTop="2dp"
            android:paddingBottom="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="true" />

        <View
            android:id="@+id/clickableArtist"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            android:layout_marginTop="16dp"
            android:src="@drawable/vd_more"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/button_primary_tint"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
        
    </android.support.constraint.ConstraintLayout>

</layout>