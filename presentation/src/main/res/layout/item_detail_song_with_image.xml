<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="dev.olog.shared.TextUtils"/>
        <variable name="item" type="dev.olog.presentation.model.DisplayableItem"/>
        <variable name="position" type="int"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_song_container"
        android:layout_margin="12dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:src="@drawable/placeholder_folder"
            app:imageSong="@{item.image}"
            app:position="@{position}"/>

        <TextView
            android:id="@+id/firstText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover"
            app:layout_constraintBottom_toTopOf="@+id/secondText"
            app:layout_constraintEnd_toStartOf="@+id/drag_handle"
            android:text="@{item.title}"
            tools:text="@tools:sample/lorem"
            style="@style/Song.MainText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/secondText"
            app:layout_constraintStart_toEndOf="@+id/cover"
            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintEnd_toStartOf="@+id/remix"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{item.subtitle}"
            tools:text="@tools:sample/lorem"
            style="@style/Song.SecondaryText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp" />


        <ImageButton
            android:id="@+id/drag_handle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/vd_drag_handle"
            android:tint="@color/button_primary_tint"
            android:layout_gravity="end"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/explicit"
            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/drag_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ExplicitView"
            android:visibility="@{item.isExplicit ? View.VISIBLE : View.GONE}"/>

        <TextView
            android:id="@+id/remix"
            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/explicit"
            style="@style/RemixView"
            android:layout_marginEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{item.isRemix ? View.VISIBLE : View.GONE}"/>


    </android.support.constraint.ConstraintLayout>


</layout>