<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:elevation="4dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar"
        android:background="@color/colorPrimaryDark"
        android:elevation="@dimen/toolbar_elevation"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:background="@color/toolbar"
        android:elevation="@dimen/toolbar_elevation">


        <ImageButton
            android:id="@+id/back"
            android:src="@drawable/vd_back_arrow"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="@color/button_primary_tint"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/header"
            android:text="@string/related_artists"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_related_artist"
        tools:layoutManager="android.support.v7.widget.GridLayoutManag‌​er"
        app:spanCount="3"/>

</LinearLayout>