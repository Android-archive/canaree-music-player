<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <dev.olog.presentation.widgets.FullScreenConstraintLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/background"
        android:id="@+id/playerRoot">

        <include layout="@layout/layout_view_switcher"
            app:layout_constraintTop_toBottomOf="@+id/playerToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <dev.olog.presentation.widgets.SwipeableView
            android:id="@+id/swipeableView"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@+id/imageSwitcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageSwitcher"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            tools:visibility="invisible" />

        <!-- seekbar -->
        <dev.olog.media.widget.CustomSeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/swipeableView"
            app:layout_constraintTop_toBottomOf="@+id/swipeableView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="12dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:thumb="@drawable/seekbar_thumb_line"
            android:thumbTint="@android:color/holo_red_light"/>

        <!-- bookmark -->
        <TextView
            android:id="@+id/bookmark"
            tools:text="0:00"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/player_bookmark_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/swipeableView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"
            android:clickable="false"
            android:focusable="false" />

        <!-- duration -->
        <TextView
            android:id="@+id/duration"
            tools:text="2:57"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/player_bookmark_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/swipeableView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:clickable="false"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bookmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <!-- title -->
            <dev.olog.presentation.widgets.autoscroll.SlidingParentAutoScrollTextView
                android:id="@+id/title"
                tools:text="Thirty Seconds to Mars - The Kills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_title_text_size"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="sans-serif-black"
                tools:fontFamily="sans-serif-black"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />

            <TextView
                android:id="@+id/artist"
                tools:text="50 Cent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_artist_text_size"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />

        </LinearLayout>

        <include
            android:id="@+id/playerControls"
            app:layout_constraintTop_toBottomOf="@+id/artist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/more"
            layout="@layout/player_controls_default"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"/>

        <ImageButton
            android:id="@+id/more"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/vd_more"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:rotation="90"/>

        <ImageButton
            android:id="@+id/lyrics"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:src="@drawable/vd_offline_lyrics"
            app:layout_constraintStart_toEndOf="@+id/playbackSpeed"
            app:layout_constraintEnd_toStartOf="@+id/favorite"
            app:layout_constraintBottom_toBottomOf="@+id/more"/>

        <dev.olog.presentation.widgets.LottieFavorite
            android:id="@+id/favorite"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_gravity="end"
            app:layout_constraintEnd_toStartOf="@+id/more"
            app:layout_constraintStart_toEndOf="@+id/lyrics"
            app:layout_constraintBottom_toBottomOf="@+id/more"/>

        <ImageButton
            android:id="@+id/playbackSpeed"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:src="@drawable/vd_slow_motion"
            app:layout_constraintStart_toEndOf="@+id/volume"
            app:layout_constraintEnd_toStartOf="@+id/lyrics"
            app:layout_constraintBottom_toBottomOf="@+id/more" />

        <dev.olog.presentation.widgets.VolumeChangerView
            android:id="@+id/volume"
            android:layout_gravity="end"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:src="@drawable/vd_volume_up"
            app:layout_constraintBottom_toBottomOf="@+id/more"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

        <dev.olog.shared.widgets.DottedSeparator
            android:id="@+id/separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:layout_height="2dp" />

    </dev.olog.presentation.widgets.FullScreenConstraintLayout>

</layout>