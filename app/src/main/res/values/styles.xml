<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="tabStyle">@style/DefaultTabLayout</item>
        <item name="materialCardViewStyle">@style/DefaultMaterialCard</item>
        <item name="textInputStyle">@style/DefaultTextBox</item>
        <item name="floatingActionButtonStyle">@style/LightFab</item>

        <!--for design time-->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base dark application theme. -->
    <style name="BaseDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="tabStyle">@style/DefaultTabLayout</item>
        <item name="materialCardViewStyle">@style/DefaultMaterialCard</item>
        <item name="textInputStyle">@style/DefaultTextBox</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="ExtendedFab" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">32dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="iconTint">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="DefaultTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabTextColor">?android:attr/textColorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicator">@drawable/rounded_line</item>
    </style>

    <style name="DefaultMaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">?android:attr/windowBackground</item>
        <item name="cardElevation">12dp</item>
    </style>

    <style name="DefaultTextBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
    
    <style name="EditItemEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14dp</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="PositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="EditItemSubHeader">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="DefaultFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
    </style>

    <style name="SecondaryFab" parent="DefaultFab">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="tint">?android:attr/windowBackground</item>
    </style>

    <style name="NowPlaying">
        <item name="android:textSize">@dimen/player_now_playing_size</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:alpha">.4</item>
    </style>

</resources>
