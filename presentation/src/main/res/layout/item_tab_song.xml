<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="dev.olog.shared.TextUtils"/>
        <variable name="item" type="dev.olog.presentation.model.DisplayableItem"/>
        <variable name="position" type="int"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"

        android:clipToPadding="false"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:layout_width="60dp"
            android:layout_height="0dp"

            app:imageSong="@{item.image}"
            app:position="@{position}"

            android:padding="6dp"
            tools:src="@drawable/placeholder_folder"/>

        <TextView
            android:id="@+id/firstText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="6dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/secondText"
            app:layout_constraintStart_toEndOf="@id/cover"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/Song.MainText"
            android:text="@{item.title}"

            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/secondText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"

            app:layout_constraintStart_toEndOf="@+id/cover"
            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintEnd_toStartOf="@+id/remix"
            app:layout_constraintBottom_toBottomOf="parent"

            style="@style/Song.SecondaryText"
            android:text="@{item.subtitle}"
            tools:text="@tools:sample/lorem"/>

        <TextView
            android:id="@+id/explicit"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/ExplicitView"
            android:visibility="@{item.isExplicit ? View.VISIBLE : View.GONE}"/>

        <TextView
            android:id="@+id/remix"
            android:layout_marginEnd="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/firstText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/explicit"

            style="@style/RemixView"
            android:visibility="@{item.isRemix ? View.VISIBLE : View.GONE}" />

    </android.support.constraint.ConstraintLayout>

</layout>
