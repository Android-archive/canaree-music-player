<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false">

    <View
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar"
        android:elevation="@dimen/toolbar_elevation"
        android:background="@color/colorPrimaryDark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_choose_track"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <TextView
        android:id="@+id/emptyStateText"
        android:text="@string/common_no_tracks"
        android:textColor="@color/text_color_primary"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="@dimen/common_status_bar_plus_toolbar"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/common_status_bar_plus_toolbar"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:stateListAnimator="@animator/playlist_track_chooser_app_bar"
        android:background="@color/toolbar">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">

            <EditText
                android:id="@+id/filter"
                android:hint="@string/common_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="16dp"
                android:paddingEnd="64dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:maxLines="1"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/clear"
                android:layout_gravity="end"
                android:src="@drawable/vd_clear"
                android:padding="12dp"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:tint="@color/dark_grey"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:background="@color/toolbar"
        android:layout_marginTop="@dimen/status_bar"
        android:elevation="@dimen/toolbar_elevation">

        <ImageButton
            android:id="@+id/back"
            android:src="@drawable/vd_back_arrow"
            android:padding="12dp"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:tint="@color/dark_grey"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/header"
            android:text="@string/playlist_tracks_chooser_no_tracks"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_primary"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp" />

        <ImageButton
            android:id="@+id/filterList"
            android:src="@drawable/vd_filter"
            android:padding="12dp"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:tint="@color/button_selected"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </FrameLayout>

    <dev.olog.msc.presentation.widget.fast.scroller.RxWaveSideBarView
        android:id="@+id/sidebar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="160dp"
        android:clipToPadding="false"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save"
        android:layout_gravity="end|bottom"
        app:fabSize="normal"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorAccent"
        android:tint="@android:color/white"
        android:src="@drawable/vd_save"
        android:visibility="gone"
        tools:visibility="visible"/>

</android.support.design.widget.CoordinatorLayout>