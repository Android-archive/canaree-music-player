<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true">
        <set>

            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="1.1"
                android:valueFrom="1"
                android:duration="250"
                android:valueType="floatType" />

            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="1.1"
                android:valueFrom="1"
                android:duration="250"
                android:valueType="floatType"/>

            <objectAnimator
                android:propertyName="rotation"
                android:valueTo="2"
                android:valueFrom="0"
                android:duration="250"
                android:valueType="floatType"/>

        </set>
    </item>

    <item>
        <set>

            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="1"
                android:valueFrom="1.1"
                android:duration="250"
                android:valueType="floatType" />

            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="1"
                android:valueFrom="1.1"
                android:duration="250"
                android:valueType="floatType"/>

            <objectAnimator
                android:propertyName="rotation"
                android:valueTo="0"
                android:valueFrom="2"
                android:duration="250"
                android:valueType="floatType"/>

        </set>

    </item>

</selector>