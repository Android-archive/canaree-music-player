<?xml version="1.0" encoding="utf-8"?>
<layout>

    <dev.olog.presentation.widgets.FullScreenConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="match_parent"
        android:background="@drawable/player_spotify_background"
        android:id="@+id/playerRoot">

        <dev.olog.presentation.widgets.StatusBarView
            android:id="@+id/statusBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/status_bar"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <include
            android:id="@+id/playerToolbar"
            layout="@layout/player_toolbar_spotify"
            app:layout_constraintTop_toBottomOf="@+id/statusBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar" />

        <include layout="@layout/layout_view_switcher_square"
            app:layout_constraintTop_toBottomOf="@+id/playerToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/player_cover_margin_horizontal_spotify"
            android:layout_marginEnd="@dimen/player_cover_margin_horizontal_spotify"
            app:layout_constraintBottom_toTopOf="@+id/textWrapper"/>

        <dev.olog.presentation.widgets.swipeableview.SwipeableView
            android:id="@+id/swipeableView"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="@+id/imageSwitcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageSwitcher"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            tools:visibility="invisible"/>

        <!-- seekbar -->
        <dev.olog.media.widget.CustomSeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/imageSwitcher"
            app:layout_constraintEnd_toEndOf="@+id/imageSwitcher"
            app:layout_constraintBottom_toTopOf="@+id/playerControls"
            android:paddingBottom="@dimen/player_seekBar_spotify_padding"
            android:paddingTop="@dimen/player_seekBar_spotify_padding"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            tools:progress="40"
            tools:max="100"
            android:layout_marginBottom="16dp"/>

        <!-- bookmark -->
        <TextView
            android:id="@+id/bookmark"
            tools:text="0:00"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/player_bookmark_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/seekBar"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginStart="6dp"
            android:clickable="false"
            android:focusable="false" />

        <!-- duration -->
        <TextView
            android:id="@+id/duration"
            tools:text="2:57"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/player_bookmark_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/seekBar"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            android:layout_marginEnd="6dp"
            android:clickable="false"
            android:focusable="false" />

        <include
            android:id="@+id/playerControls"
            app:layout_constraintStart_toStartOf="@+id/imageSwitcher"
            app:layout_constraintEnd_toEndOf="@+id/imageSwitcher"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/player_controls_spotify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"/>

        <dev.olog.presentation.widgets.LottieFavorite
            android:id="@+id/favorite"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="0dp"
            android:layout_gravity="end"
            app:layout_constraintTop_toBottomOf="@+id/playerControls"
            app:layout_constraintStart_toStartOf="@+id/playerControls" />

        <ImageButton
            android:id="@+id/more"
            app:layout_constraintTop_toBottomOf="@+id/playerControls"
            app:layout_constraintEnd_toEndOf="@id/playerControls"
            android:src="@drawable/vd_more"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <!--       linear layout wrapper (other viewgroup not working) is mandatory to avoid autoscroll collision with seekbar -->
        <LinearLayout
            android:id="@+id/textWrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintStart_toStartOf="@+id/imageSwitcher"
            app:layout_constraintEnd_toEndOf="@+id/imageSwitcher"
            android:layout_marginBottom="16dp">

            <!-- title -->
            <dev.olog.presentation.widgets.autoscroll.SlidingParentAutoScrollTextView
                android:id="@+id/title"
                tools:text="In Da Club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_title_text_size"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="sans-serif-black"
                tools:fontFamily="sans-serif-black"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />

            <TextView
                android:id="@+id/artist"
                tools:text="50 Cent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_artist_text_size"
                android:textColor="?android:attr/textColorSecondary"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:layout_marginBottom="@dimen/player_artist_bottom_padding"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />

        </LinearLayout>

    </dev.olog.presentation.widgets.FullScreenConstraintLayout>

</layout>