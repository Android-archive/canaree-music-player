<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clickable="false"
    android:background="#f8f8f8">

    <TextView
        android:id="@+id/text1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/splash_player_controls"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/text_color_primary"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text2"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="@string/splash_player_tutorial_1"
        android:textColor="@color/text_color_primary"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/text3"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:text="@string/splash_player_tutorial_2"
        android:textColor="@color/text_color_primary"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardElevation="2dp"
        android:translationY="5dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="6dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nowPlaying"
                android:textSize="@dimen/player_now_playing_size"
                android:text="@string/player_now_playing"
                android:textStyle="bold"
                android:layout_marginStart="32dp"
                android:textColor="@color/text_color_primary"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="@dimen/tab"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingTop="8dp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/coverLayout"
                app:layout_constraintTop_toBottomOf="@+id/nowPlaying"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/player_cover_margin_vertical"
                android:layout_marginStart="@dimen/player_cover_margin_horizontal"
                android:layout_marginEnd="@dimen/player_cover_margin_horizontal"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:stateListAnimator="@animator/elevate_on_activated"
                android:clipChildren="false"
                android:clickable="false">

                <!-- cover -->
                <dev.olog.presentation.widgets.SwipeableImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@drawable/placeholder_musical_note"
                    android:clickable="true"
                    android:focusable="true"/>

            </android.support.v7.widget.CardView>


            <View
                app:layout_constraintTop_toTopOf="@+id/coverLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/coverLayout"
                android:id="@+id/fakeNext"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:elevation="20dp"/>

            <View
                android:id="@+id/fakePrevious"
                app:layout_constraintTop_toTopOf="@+id/coverLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/coverLayout"
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:elevation="20dp"/>

            <!-- seekbar -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/coverLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:max="@integer/very_high_duration"
                android:paddingBottom="10dp"
                android:paddingTop="@dimen/player_seekBar_padding_top"
                android:paddingStart="@dimen/player_seekBar_padding_horizontal"
                android:paddingEnd="@dimen/player_seekBar_padding_horizontal"
                android:progressTint="@color/progress_bar_tint"
                android:thumbTint="@color/progress_bar_tint"
                android:progressBackgroundTint="@color/progress_bar_secondary_tint"
                tools:progress="40"/>

            <!-- shuffle -->
            <ImageButton
                android:id="@+id/shuffle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/player_shuffle_padding"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/vd_shuffle"
                tools:tint="@color/item_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/repeat"
                app:layout_constraintTop_toBottomOf="@+id/seekBar"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:elevation="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- repeat -->
            <ImageButton
                android:id="@+id/repeat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="@dimen/player_shuffle_padding"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/vd_repeat"
                tools:src="@drawable/vd_repeat"
                tools:tint="@color/button_secondary_tint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar"
                app:layout_constraintStart_toEndOf="@+id/shuffle"
                android:elevation="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- title -->
            <TextView
                android:id="@+id/title"
                tools:text="Shhh. I\'m hiding"
                app:layout_constraintTop_toBottomOf="@+id/repeat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_title_text_size"
                android:textColor="@color/text_color_primary"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/player_title_margin_horizontal"
                android:layout_marginEnd="@dimen/player_title_margin_horizontal"
                android:clickable="false"
                android:focusable="false"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>