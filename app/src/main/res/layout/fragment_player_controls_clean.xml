<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:background="@color/background"
        android:id="@+id/playerRoot"
        android:clipToPadding="false"
        android:clipChildren="false">

        <include
            android:id="@+id/playerToolbar"
            android:layout_marginTop="16dp"
            layout="@layout/fragment_player_toolbar_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/player_toolbar" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <dev.olog.msc.presentation.widget.image.view.PlayerImageView
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1"
                tools:src="@drawable/placeholder_musical_note"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginTop="@dimen/player_cover_margin_vertical"
                android:layout_marginStart="@dimen/player_cover_margin_horizontal"
                android:layout_marginEnd="@dimen/player_cover_margin_horizontal"
                android:stateListAnimator="@animator/elevate_on_activated_high"
                app:cornerRadius="20" />

            <dev.olog.msc.presentation.widget.SwipeableView
                android:id="@+id/swipeableView"
                android:elevation="20dp"
                app:layout_constraintTop_toTopOf="@+id/cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                tools:visibility="invisible"/>

            <!-- seekbar -->
            <dev.olog.msc.presentation.widget.CustomSeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="57dp"
                android:max="@integer/common_high_number"
                android:paddingBottom="20dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:paddingTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/cover"
                app:layout_constraintStart_toStartOf="@+id/cover"
                app:layout_constraintTop_toBottomOf="@+id/artist"
                app:layout_constraintBottom_toTopOf="@+id/playerControls"
                tools:max="100"
                tools:progress="40"
                tools:progressTint="#929cb0"
                tools:thumbTint="#929cb0"
                android:progressBackgroundTint="#dbdee5"
                tools:thumb="@drawable/seekbar_thumb"/>

            <!-- bookmark -->
            <TextView
                android:id="@+id/bookmark"
                tools:text="0:00"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/player_bookmark_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/seekBar"
                app:layout_constraintStart_toStartOf="@+id/seekBar"
                android:clickable="false"
                android:focusable="false"
                android:translationY="20dp"
                android:scaleX=".9"
                android:scaleY=".9"
                android:textStyle="bold"
                tools:textColor="#aeb5c3"/>

            <!-- duration -->
            <TextView
                android:id="@+id/duration"
                tools:text="2:57"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/player_bookmark_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/seekBar"
                app:layout_constraintEnd_toEndOf="@+id/seekBar"
                android:clickable="false"
                android:focusable="false"
                android:translationY="20dp"
                android:scaleX=".9"
                android:scaleY=".9"
                android:textStyle="bold"
                tools:textColor="#aeb5c3"/>

            <include
                android:id="@+id/playerControls"
                layout="@layout/player_controls_clean"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/playingQueue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />

            <!-- title -->
            <TextView
                android:id="@+id/title"
                tools:text="Gz And Hustlas"
                app:layout_constraintTop_toBottomOf="@+id/swipeableView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="?android:attr/textColorPrimary"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                tools:textColor="#49515e"/>

            <TextView
                android:id="@+id/artist"
                tools:text="Doggystyle"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorSecondary"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center"
                tools:textColor="#797f8b"/>

            <ImageButton
                android:id="@+id/more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/vd_more"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginBottom="8dp"
                android:rotation="90"
                tools:tint="#929cb0"/>

            <ImageButton
                android:id="@+id/lyrics"
                android:layout_width="@dimen/common_icon_size"
                android:layout_height="@dimen/common_icon_size"
                android:src="@drawable/vd_offline_lyrics"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toEndOf="@+id/playingQueue"
                app:layout_constraintEnd_toStartOf="@+id/favorite"
                app:layout_constraintBottom_toBottomOf="@+id/more"
                tools:tint="#929cb0"/>

            <dev.olog.msc.presentation.widget.LottieFavorite
                android:id="@+id/favorite"
                android:layout_width="@dimen/common_icon_size"
                android:layout_height="@dimen/common_icon_size"
                android:layout_gravity="end"
                app:layout_constraintEnd_toStartOf="@+id/more"
                app:layout_constraintStart_toEndOf="@+id/lyrics"
                app:layout_constraintBottom_toBottomOf="@+id/more" />

            <ImageButton
                android:id="@+id/playingQueue"
                android:layout_width="@dimen/common_icon_size"
                android:layout_height="@dimen/common_icon_size"
                android:src="@drawable/vd_playing_queue"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/more"
                tools:tint="#929cb0"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</layout>