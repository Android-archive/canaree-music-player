<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="item" type="dev.olog.presentation.model.DisplayableItem"/>
        <variable name="position" type="int"/>
        <variable name="source" type="int"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/item_tab_album_last_player_width"
        android:layout_height="wrap_content"
        tools:background="@color/background"
        android:padding="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/coverLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:imageAlbum="@{item.getImage}"
                app:source="@{source}"
                app:position="@{position}"

                tools:src="@drawable/placeholder_folder"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/firstText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/coverLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"

            style="@style/Album.MainText"
            android:text="@{item.title}"

            tools:text="@tools:sample/lorem"/>

    </android.support.constraint.ConstraintLayout>

</layout>