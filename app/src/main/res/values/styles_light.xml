<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--white theme-->
    <style name="AppThemeWhite" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>

        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background</item>

        <!--used for miniplayer background-->
        <item name="android:textColorTertiaryInverse">@color/background</item>

        <item name="imageButtonStyle">@style/ImageButtonLight</item>
        <item name="seekBarStyle">@style/SeekBarLight</item>
        <item name="floatingActionButtonStyle">@style/LightFab</item>
    </style>

    <!--gray theme-->
    <style name="AppThemeGray" parent="AppThemeWhite">
        <item name="android:windowBackground">@color/theme_gray_background</item>
    </style>

    <style name="ImageButtonLight" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/dark_grey</item>
    </style>

    <style name="SeekBarLight" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/dark_grey</item>
        <item name="android:thumbTint">@color/dark_grey</item>
        <item name="android:progressBackgroundTint">@color/grey400</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="LightFab" parent="DefaultFab">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="tint">@android:color/white</item>
    </style>

</resources>