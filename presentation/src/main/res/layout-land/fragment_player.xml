<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".45"/>

    <android.support.v7.widget.CardView
        android:id="@+id/coverLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintBottom_toTopOf="@+id/repeat"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:stateListAnimator="@animator/elevate_on_activated"
        android:clickable="false"
        android:focusable="false">

        <!-- cover -->
        <dev.olog.presentation.widgets.SwipeableImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/placeholder_musical_note"
            android:clickable="true"
            android:focusable="true" />

    </android.support.v7.widget.CardView>

    <!-- bookmark -->
    <TextView
        android:id="@+id/bookmark"
        tools:text="0:00"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/player_bookmark_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintEnd_toStartOf="@+id/duration"
        android:layout_marginStart="32dp"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginBottom="4dp"/>

    <!-- duration -->
    <TextView
        android:id="@+id/duration"
        tools:text=" / 2:57"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/player_bookmark_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginBottom="4dp"/>

    <!-- seekbar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/repeat"
        app:layout_constraintBottom_toBottomOf="@+id/repeat"
        app:layout_constraintStart_toEndOf="@+id/repeat"
        app:layout_constraintEnd_toStartOf="@+id/shuffle"
        android:max="@integer/very_high_duration"
        android:progressTint="@color/progress_bar_tint"
        android:thumbTint="@color/progress_bar_tint"
        android:progressBackgroundTint="@color/progress_bar_secondary_tint"
        tools:progress="40"
        android:clickable="true"
        android:focusable="true" />


    <!-- shuffle -->
    <ImageButton
        android:id="@+id/shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/vd_shuffle"
        tools:tint="@color/item_selected"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- repeat -->
    <ImageButton
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/vd_repeat"
        tools:src="@drawable/vd_repeat"
        tools:tint="@color/button_secondary_tint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shuffle"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <!-- prev -->
    <View
        android:id="@+id/fakePrevious"
        app:layout_constraintTop_toTopOf="@+id/coverLayout"
        app:layout_constraintBottom_toBottomOf="@+id/coverLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp"/>

    <!-- next -->
    <View
        android:id="@+id/fakeNext"
        app:layout_constraintTop_toTopOf="@+id/coverLayout"
        app:layout_constraintBottom_toBottomOf="@+id/coverLayout"
        app:layout_constraintEnd_toEndOf="@id/coverLayout"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:paddingTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_mini_queue"
        android:paddingStart="@dimen/playing_queue_margin_horizontal"
        android:paddingEnd="@dimen/playing_queue_margin_horizontal"
        android:paddingBottom="24dp"
        android:overScrollMode="never"
        android:clipChildren="false"
        android:clipToPadding="false"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/slidingView"
        app:layout_constraintTop_toTopOf="@+id/coverLayout"
        app:layout_constraintStart_toEndOf="@+id/coverLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/playerToolbar"
            layout="@layout/layout_player_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/tab" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/playerToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <!-- title -->
            <TextView
                android:id="@+id/title"
                tools:text="In Da Club"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_title_text_size"
                android:textColor="@color/text_color_primary"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/player_title_margin_horizontal"
                android:layout_marginEnd="@dimen/player_title_margin_horizontal"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="12dp"/>

            <TextView
                android:id="@+id/artist"
                tools:text="50 Cent - Qualche album"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/player_artist_text_size"
                android:textColor="@color/text_color_secondary"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:layout_marginStart="@dimen/player_title_margin_horizontal"
                android:layout_marginEnd="@dimen/player_title_margin_horizontal"
                android:layout_marginBottom="@dimen/player_artist_bottom_padding"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false"
                android:paddingStart="12dp"/>

            <TextView
                android:id="@+id/explicit"
                app:layout_constraintTop_toTopOf="@+id/artist"
                app:layout_constraintBottom_toBottomOf="@+id/artist"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/player_title_margin_horizontal"
                style="@style/ExplicitView"
                android:visibility="gone"
                tools:visibility="visible"
                android:clickable="false"
                android:focusable="false"/>

            <TextView
                android:id="@+id/remix"
                app:layout_constraintTop_toTopOf="@+id/artist"
                app:layout_constraintBottom_toBottomOf="@+id/artist"
                app:layout_constraintEnd_toStartOf="@+id/explicit"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RemixView"
                app:layout_goneMarginEnd="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:clickable="false"
                android:focusable="false"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/statusBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar"
        android:background="@color/status_bar_secondary"/>

</android.support.constraint.ConstraintLayout>