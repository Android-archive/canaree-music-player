<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="55dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="2dp"
    android:background="#FAFAFA">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/wrapper"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent">

        <dev.olog.msc.presentation.widget.AnimatedImageView
            android:id="@+id/next"
            app:avd="@drawable/avd_music_next"
            tools:src="@drawable/vd_music_next"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"/>

        <dev.olog.msc.presentation.widget.AnimatedPlayPauseImageView
            android:id="@+id/playPause"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="5dp"
            tools:src="@drawable/vd_playpause_play"
            android:background="@null"
            android:scaleX="1.1"
            android:scaleY="1.1"
            tools:rotation="90"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/next"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"/>

        <dev.olog.msc.presentation.widget.AnimatedImageView
            android:id="@+id/previous"
            app:avd="@drawable/avd_music_previous"
            tools:src="@drawable/vd_music_previous"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintEnd_toStartOf="@+id/playPause"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"/>

    </android.support.constraint.ConstraintLayout>

    <dev.olog.msc.presentation.widget.CustomSeekBar
        android:id="@+id/seekBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:thumbTint="@color/dark_grey"
        android:progressTint="@color/dark_grey"
        tools:progress="40"
        android:max="@integer/common_high_number"
        android:clickable="true"
        android:focusable="true" />

</android.support.constraint.ConstraintLayout>