<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="item" type="dev.olog.msc.presentation.model.DisplayableItem"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detail_header_margin_start"
            android:layout_marginEnd="@dimen/detail_header_margin_start"
            android:paddingTop="12dp"
            android:text="@{item.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Animal Ambition: An Untamed Desire to Win"
            android:lineSpacingMultiplier=".9"
            android:textAppearance="@style/Headline4" />

        <!--<dev.olog.msc.presentation.widget.image.view.CircularImageView-->
            <!--android:id="@+id/artistImage"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/title"-->
            <!--app:layout_constraintStart_toStartOf="@+id/title"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--tools:src="@drawable/placeholder_artist"-->
            <!--android:layout_marginTop="4dp"-->
            <!--app:albumsArtistImage="@{item}"-->
            <!--android:visibility="@{item.mediaId.isAlbum ? View.VISIBLE : View.GONE}"-->
            <!--tools:visibility="visible"/>-->

        <TextView
            android:id="@+id/subtitle"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toEndOf="@+id/title"
            android:text="@{item.subtitle}"
            tools:text="50 Cent"
            android:textSize="@dimen/item_detail_main_header_subtitle_size"
            android:textColor="?attr/colorAccent"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="2dp"/>

        <View
            android:id="@+id/clickableArtist"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/subtitle"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toTopOf="@+id/title"
            tools:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

</layout>