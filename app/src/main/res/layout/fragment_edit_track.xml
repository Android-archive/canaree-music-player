<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA232323"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="@dimen/status_bar">

    <android.support.v7.widget.CardView
        android:id="@+id/root"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_gravity="center"
        app:cardCornerRadius="2dp"
        app:layout_constraintWidth_max="350dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <dev.olog.msc.presentation.widget.BackgroundImageView
                android:id="@+id/backgroundCover"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="16:9"
                tools:src="@android:color/holo_red_dark"
                android:clickable="false"
                android:focusable="false"/>

            <dev.olog.msc.presentation.widget.image.view.ShapeImageView
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintBottom_toBottomOf="@+id/backgroundCover"
                android:layout_margin="16dp"
                app:layout_constraintHeight_max="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder_folder"
                tools:tint="@color/item_selected"
                android:clickable="true"
                android:focusable="true"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/autoTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/backgroundCover"
                app:layout_constraintTop_toBottomOf="@+id/backgroundCover"
                app:fabSize="mini"
                android:src="@drawable/vd_search"
                android:tint="@android:color/white"
                android:layout_marginEnd="16dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/titleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_title"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/autoTag"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/title"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/artistLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_artist"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/titleLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/artist"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/albumLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_album"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/artistLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/album"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/genreLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_genre"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/albumLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/genre"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/yearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_year"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/genreLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/discLayout"
                app:layout_constraintHorizontal_chainStyle="packed">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/year"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/discLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_disc"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/genreLayout"
                app:layout_constraintStart_toEndOf="@+id/yearLayout"
                app:layout_constraintEnd_toStartOf="@+id/trackNumberLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/disc"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/trackNumberLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/edit_info_track"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/genreLayout"
                app:layout_constraintStart_toEndOf="@+id/discLayout"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/trackNumber"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/okButton"
                app:layout_constraintTop_toBottomOf="@+id/yearLayout"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/popup_positive_save"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/activated_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/cancelButton"
                android:text="@string/popup_negative_cancel"
                android:textColor="@color/dark_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/okButton"
                app:layout_constraintTop_toTopOf="@+id/okButton"
                app:layout_constraintEnd_toStartOf="@+id/okButton"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
