<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppThemeWhite"
    android:clipToPadding="false"
    android:clipChildren="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        app:cardCornerRadius="@dimen/big_default_corner_radius"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="80dp"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/error"
            android:text="@string/floating_window_offline"
            android:textColor="@color/text_color_primary"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="48dp"
            android:background="@color/background"
            android:visibility="gone"/>

        <include
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"/>

        <include
            layout="@layout/layout_mini_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>

        <include
            android:id="@+id/noTracks"
            layout="@layout/content_web_view_empty_state" />

        <dev.olog.msc.presentation.widget.AnimatedImageView
            android:id="@+id/next"
            app:avd="@drawable/avd_music_next"
            tools:src="@drawable/vd_music_next"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"/>

        <dev.olog.msc.presentation.widget.AnimatedImageView
            android:id="@+id/previous"
            app:avd="@drawable/avd_music_previous"
            tools:src="@drawable/vd_music_previous"
            android:background="@null"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"/>

    </android.support.v7.widget.CardView>



</FrameLayout>