<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/statusBar"
        android:layout_width="0dp"
        android:layout_height="@dimen/status_bar"
        android:background="@color/status_bar_secondary"/>

    <include
        android:id="@+id/playerToolbar"
        layout="@layout/layout_player_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/statusBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab" />

    <!-- cover -->
    <ImageView
        android:id="@+id/cover"
        app:layout_constraintTop_toBottomOf="@+id/playerToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:src="@drawable/placeholder_bird_singing"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/elevate_on_activated" />

    <!-- prev -->
    <View
        android:id="@+id/fakePrevious"
        app:layout_constraintTop_toTopOf="@+id/cover"
        app:layout_constraintBottom_toBottomOf="@+id/cover"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp"/>

    <!-- next -->
    <View
        android:id="@+id/fakeNext"
        app:layout_constraintTop_toTopOf="@+id/cover"
        app:layout_constraintBottom_toBottomOf="@+id/cover"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="20dp"/>

    <!-- bookmark -->
    <TextView
        android:id="@+id/bookmark"
        tools:text="0:00"
        android:text="0:00"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/player_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintEnd_toStartOf="@+id/duration"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/product_sans"/>

    <!-- duration -->
    <TextView
        android:id="@+id/duration"
        tools:text=" / 2:57"
        android:text=" / 2:57"
        android:textColor="@color/text_color_primary"
        android:textSize="@dimen/player_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:clickable="false"
        android:focusable="false"
        android:fontFamily="@font/product_sans"/>

    <!-- seekbar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/player_seekBar_bottom_padding"
        android:paddingTop="@dimen/player_seekBar_top_padding"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:progressTint="@color/progress_bar_tint"
        android:thumbTint="@color/progress_bar_tint"
        android:progressBackgroundTint="@color/progress_bar_secondary_tint"
        tools:progress="40"
        android:clickable="true"
        android:focusable="true" />


    <!-- shuffle -->
    <ImageButton
        android:id="@+id/shuffle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@null"
        android:src="@drawable/vd_shuffle"
        tools:tint="@color/item_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/repeat"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:elevation="2dp"/>

    <!-- repeat -->
    <ImageButton
        android:id="@+id/repeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@null"
        android:src="@drawable/vd_repeat"
        tools:src="@drawable/vd_repeat"
        tools:tint="@color/button_secondary_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintStart_toEndOf="@+id/shuffle"
        android:elevation="2dp"/>

</android.support.constraint.ConstraintLayout>