<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"/>

    <android.support.constraint.Guideline
        android:id="@+id/verticalGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33"/>

    <android.support.constraint.Guideline
        android:id="@+id/verticalGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66"/>

    <TextView
        android:id="@+id/upperBand"
        app:layout_constraintTop_toTopOf="@+id/bar1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="+15 dD"
        android:textSize="11sp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lowerBand"
        app:layout_constraintBottom_toBottomOf="@+id/bar1"
        app:layout_constraintStart_toStartOf="parent"
        android:text="-15 dD"
        android:textSize="11sp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <dev.olog.presentation.widgets.vertical_seek_bar.VerticalSeekBar
        android:id="@+id/bar1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/status_bar"
        app:layout_constraintBottom_toTopOf="@+id/freq1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bar2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:progress="40"
        android:layout_marginStart="16dp"/>

    <dev.olog.presentation.widgets.vertical_seek_bar.VerticalSeekBar
        android:id="@+id/bar2"
        app:layout_constraintTop_toTopOf="@+id/bar1"
        app:layout_constraintBottom_toBottomOf="@+id/bar1"
        app:layout_constraintStart_toEndOf="@+id/bar1"
        app:layout_constraintEnd_toStartOf="@+id/bar3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:progress="40"/>

    <dev.olog.presentation.widgets.vertical_seek_bar.VerticalSeekBar
        android:id="@+id/bar3"
        app:layout_constraintTop_toTopOf="@+id/bar1"
        app:layout_constraintBottom_toBottomOf="@+id/bar1"
        app:layout_constraintStart_toEndOf="@+id/bar2"
        app:layout_constraintEnd_toStartOf="@+id/bar4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:progress="40"/>

    <dev.olog.presentation.widgets.vertical_seek_bar.VerticalSeekBar
        android:id="@+id/bar4"
        app:layout_constraintTop_toTopOf="@+id/bar1"
        app:layout_constraintBottom_toBottomOf="@+id/bar1"
        app:layout_constraintStart_toEndOf="@+id/bar3"
        app:layout_constraintEnd_toStartOf="@+id/bar5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:progress="40"/>

    <dev.olog.presentation.widgets.vertical_seek_bar.VerticalSeekBar
        android:id="@+id/bar5"
        app:layout_constraintTop_toTopOf="@+id/bar1"
        app:layout_constraintBottom_toBottomOf="@+id/bar1"
        app:layout_constraintStart_toEndOf="@+id/bar4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:progress="40"/>

    <TextView
        android:id="@+id/freq1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar1"
        app:layout_constraintStart_toStartOf="@+id/bar1"
        app:layout_constraintEnd_toEndOf="@+id/bar1"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:text="60 Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/freq2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar2"
        app:layout_constraintStart_toStartOf="@+id/bar2"
        app:layout_constraintEnd_toEndOf="@+id/bar2"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:text="230 Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/freq3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar3"
        app:layout_constraintStart_toStartOf="@+id/bar3"
        app:layout_constraintEnd_toEndOf="@+id/bar3"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:text="910 Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/freq4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar4"
        app:layout_constraintStart_toStartOf="@+id/bar4"
        app:layout_constraintEnd_toEndOf="@+id/bar4"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:text="3k Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/freq5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bar5"
        app:layout_constraintStart_toStartOf="@+id/bar5"
        app:layout_constraintEnd_toEndOf="@+id/bar5"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:text="14k Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bassBooster"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline1"
        android:text="Bass booster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/preset"
        app:layout_constraintTop_toTopOf="@+id/bassBooster"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideline1"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline2"
        android:text="Preset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/reverb"
        app:layout_constraintTop_toTopOf="@+id/preset"
        app:layout_constraintStart_toEndOf="@+id/verticalGuideline2"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Reverb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>