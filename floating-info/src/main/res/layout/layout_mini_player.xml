<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA">

    <dev.olog.shared_android.widget.AnimatedImageView
        android:id="@+id/next"
        app:avd="@drawable/avd_music_next"
        tools:src="@drawable/vd_music_next"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playPause"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        android:layout_marginEnd="48dp"/>

    <dev.olog.shared_android.widget.AnimatedPlayPauseImageView
        android:id="@+id/playPause"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:padding="10dp"
        tools:src="@drawable/vd_playpause_play"
        android:background="@null"
        android:scaleX="1.1"
        android:scaleY="1.1"
        tools:rotation="90"
        app:layout_constraintStart_toEndOf="@+id/previous"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"/>

    <dev.olog.shared_android.widget.AnimatedImageView
        android:id="@+id/previous"
        app:avd="@drawable/avd_music_previous"
        tools:src="@drawable/vd_music_previous"
        android:background="@null"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playPause"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        android:layout_marginStart="48dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:thumbTint="@color/dark_grey"
        android:progressTint="@color/dark_grey"
        tools:progress="40"
        android:max="@integer/very_high_duration"
        android:clickable="true"
        android:focusable="true" />

</android.support.constraint.ConstraintLayout>