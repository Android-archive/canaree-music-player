<?xml version="1.0" encoding="utf-8"?>
<dev.olog.presentation.widgets.switcher.CustomViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageSwitcher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:inAnimation="@android:anim/fade_in"
    android:outAnimation="@android:anim/fade_out">

    <dev.olog.presentation.widgets.imageview.ShapeImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/placeholder_musical_note"
        android:stateListAnimator="@animator/elevate_on_activated"
        android:elevation="0dp" />

    <dev.olog.presentation.widgets.imageview.ShapeImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/placeholder_musical_note"
        android:stateListAnimator="@animator/elevate_on_activated"
        android:elevation="0dp"
        app:imageViewCornerRadius="20"
        app:radiusOffset=".85"/>

    <dev.olog.presentation.widgets.imageview.ShapeImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@drawable/placeholder_musical_note"
        android:stateListAnimator="@animator/elevate_on_activated"
        android:elevation="0dp"
        app:imageViewCornerRadius="20"
        app:radiusOffset=".85"/>

</dev.olog.presentation.widgets.switcher.CustomViewSwitcher>