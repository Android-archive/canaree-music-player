<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <dev.olog.presentation.widgets.equalizer.bar.BoxedVertical
        android:id="@+id/seekbar"
        android:layout_width="24dp"
        android:layout_height="150dp"
        app:boxed_imageEnabled="false"
        app:boxed_textEnabled="false"
        android:layout_margin="4dp"
        app:boxed_progressColor="?colorAccent"
        tools:boxed_defaultValue="50"
        tools:boxed_max="50"/>

    <TextView
        android:id="@+id/frequency"
        tools:text="4K"
        android:textColor="?android:textColorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:fontFamily="sans-serif-black"
        tools:fontFamily="sans-serif-black"/>

</LinearLayout>